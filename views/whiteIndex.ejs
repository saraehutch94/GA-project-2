<!DOCTYPE html>
<html lang="en">
<%-include("./partials/head.ejs")%>
<body>
    <header>
        <h1>Vino Italiano</h1>
        <nav class="flex-nav">
            <a class="nav-list-item" href="/vino-italiano">Home</a>
            <a class="nav-list-item" href="/vino-italiano/shades">Vino</a>
            <a class='nav-list-item' href="/vino-italiano/search">Search</a>
            <a class="nav-list-item" href="/vino-italiano/whiteIndex/new">New Vino Bianco</a>
            <% if(user) { %>
                <a class="nav-list-item" href="/vino-italiano/users/dashboard">Dashboard</a>
                <a class="nav-list-item" href="/vino-italiano/users/logout">Logout</a>
            <% } else { %>
                <a class="nav-list-item" href="/vino-italiano/users/login">Login</a>
                <a class="nav-list-item" href="/vino-italiano/users/signup">Signup</a>
            <% } %>
        </nav>
    </header>
    <div class="wrapper">
        <div class="wine-wrapper">
            <% allWhites.forEach(white => { %>
                <a class="no-bottom" href="/vino-italiano/<%=white._id%>">
                    <div class="ind-wine">
                        <p>
                            <img class="index-img" src="<%= white.img %>" alt="white wine img" width="290px" height="350px"/>
                        </p>
                        <div class="wine-name-index"><strong class="uppercase-word"><%= white.varietal %></strong></div>
                    </div>
                </a>
            <% }); %>
        </div>
    </div>
    <%- include("./partials/footer.ejs")%>
</body>
</html>