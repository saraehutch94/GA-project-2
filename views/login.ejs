<!DOCTYPE html>
<html lang="en">
    <%-include("./partials/head.ejs")%>
<body>
    <header>
        <h1>Vino Italiano</h1>
    </header>
    <p>Login:</p>
    <% if(error) { %>
        <p style="color: red; text-transform: capitalize;"><%=error%></p>
    <% } %>
    <form action="/vino-italiano/users/login" method="POST">
        <label>
            Email:
            <input type="email" name="email"/>
        </label>
        <label>
            Password:
            <input type="password" name="password"/>
        </label>
        <input type="submit" value="Login"/>
    </form>
    <%- include("./partials/footer.ejs")%>
</body>
</html>